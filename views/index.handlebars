<h1 class="text1" > Burgers Anyone</h1>

<h2 class="main"> Burger Order List</h2>

<ul class="text">
{{#each burgers}}
	{{#unless this.devoured}}
<div class="eachBurger">
	<li>
		{{this.burger_name}}

		<form action="burgers/
			update/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured"
				value="true">
			<button type="submit" class="btn btn-warning">Ready for pick up</button>
	  	</form>
	 </li>
</div>
	{{/unless}}
   {{/each}}
 </ul>


<div class="rightside text-center">
<br>
 <h2 class="title"> Time to eat </h2>
 <br>

 	<ul>
 		{{#each burgers}}
 		  {{#if this.devoured}}
 		  <div  class="eachBurger"
 		    <li>
 		    <br>
 		       {{this.burger_name}}
 		       <br>
 		       
 		       <form action="burgers/update/{{this.id}}?_method=PUT" 
 		       	 method="POST">
 		         <input type="hidden" name="devoured"
 		         value="false">
 		         
 		       </form>

 		       <form action="burgers/
				delete/{{this.id}}?_method=DELETE" method="POST">
 		       	<input type="hidden" name="delete" value="true">
 		       	<button type="submit" class="btn btn-warning">Devoured it</button>
 		       </form>

 		      </li>
 		     </div>
 		     {{/if}}
 		    {{/each}}
 		  
</ul>
</div>
</div>

<div class="addBurger text-center"

<br><br>


<h2> Create your Burger here</h2>

<br>

<form class="create-update-form" action="burgers/create"
method="POST">

	<div class="form-group">
	  <label for="ca">Burger Name:</label>
	  <input type="text" id="ca" name="burger_name">
	</div>

	<div class="form-group">
	   <label for="devoured">Devoured</label><br>
	   <input type="radio" name="devoured" value="1"
	   checked>Eating<br>
	   <input type="radio" name="devoured" value="0">Order</div>
	 </div>

	   <button type="submit">Burger Creator</button>
	</form>

</div>
</div>

















